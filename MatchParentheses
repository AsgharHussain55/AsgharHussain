import java.util.Stack;

class MatchParentheses {
    public static void main(String[] args) {
        String expression = "((a+b)*[c/d])";
        boolean result = isBalanced(expression);
        System.out.println("Expression: " + expression);
        System.out.println("Balanced: " + result);
    }

    public static boolean isBalanced(String expr) {
        Stack<Character> stack = new Stack<>();

        for (char ch : expr.toCharArray()) {
            if (isOpeningBracket(ch)) {
                stack.push(ch);
            } else if (isClosingBracket(ch)) {
                if (stack.isEmpty() || !isMatchingPair(stack.pop(), ch)) {
                    return false;
                }
            }
        }
        return stack.isEmpty();
    }

    // Helper method to check opening brackets
    public static boolean isOpeningBracket(char ch) {
        return ch == '(' || ch == '[' || ch == '{';
    }

    // Helper method to check closing brackets
    public static boolean isClosingBracket(char ch) {
        return ch == ')' || ch == ']' || ch == '}';
    }

    // Helper method to match opening and closing brackets
    public static boolean isMatchingPair(char open, char close) {
        return (open == '(' && close == ')') ||
               (open == '[' && close == ']') ||
               (open == '{' && close == '}');
    }
}
